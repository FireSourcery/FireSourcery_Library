    "C_Cpp.default.mergeConfigurations": true,

    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "gcc-arm",

    "C_Cpp.formatting": "vcFormat",
    "C_Cpp.vcFormat.wrap.preserveBlocks": "allOneLineScopes",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,
    "C_Cpp.vcFormat.newLine.scopeBracesOnSeparateLines": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "newLine",
    "C_Cpp.vcFormat.newLine.beforeWhileInDoWhile": true,
    "C_Cpp.vcFormat.space.pointerReferenceAlignment": "center",
    "C_Cpp.vcFormat.space.beforeBlockOpenBrace": true,
    "C_Cpp.vcFormat.space.beforeConstructorColon": false,
    "C_Cpp.vcFormat.space.withinInitializerListBraces": true,
    "C_Cpp.vcFormat.space.withinLambdaBrackets": false,
    "C_Cpp.vcFormat.space.afterKeywordsInControlFlowStatements": false,
    "C_Cpp.vcFormat.space.beforeInitializerListOpenBrace": true,
    "C_Cpp.vcFormat.space.afterComma": true,
    "C_Cpp.vcFormat.space.removeBeforeSemicolon": true,
    "C_Cpp.vcFormat.space.preserveInInitializerList": true,
    "C_Cpp.vcFormat.indent.preserveWithinParentheses": false,
    "C_Cpp.vcFormat.indent.preprocessor": "oneLeft",
    "C_Cpp.vcFormat.indent.preserveComments": false,
    "C_Cpp.vcFormat.indent.accessSpecifiers": true,
    "C_Cpp.vcFormat.indent.caseLabels": true,
    "C_Cpp.vcFormat.indent.caseContents": true,
    "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
    "C_Cpp.vcFormat.space.withinSquareBrackets": false,
    "C_Cpp.vcFormat.space.insertAfterSemicolon": true,

    "C_Cpp.doxygen.generatedStyle": "/*!",
    // "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.rulers": [
        160
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnPaste": true,
    "editor.indentSize": "tabSize",
    "editor.semanticHighlighting.enabled": "configuredByTheme",

    "files.trimTrailingWhitespace": true,

    // "[c]": {
    //     "editor.tabSize": 4,
    //     "editor.insertSpaces": true,
    //     "editor.formatOnPaste": false,
    //     "editor.indentSize": "tabSize",
    //     "editor.detectIndentation": false,
    //     "editor.defaultFormatter": "ms-vscode.cpptools",
    //     "editor.semanticHighlighting.enabled": "configuredByTheme",
    // },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "cmake.configureOnOpen": false,

    "cSpell.words": [
        "Accs",
        "Blinky",
        "Coffceients",
        "EEPROM",
        "Feedforward",
        "inputvalue",
        "MCSM",
        "MOSFETS",
        "setpoint",
        "statemachine",
        "txsize"
    ],
}